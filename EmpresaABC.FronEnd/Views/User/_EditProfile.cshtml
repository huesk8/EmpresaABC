@model EmpresaABC.FronEnd.Models.ViewModels.ProfileViewModel
@{
    ViewBag.Title = "Editar Perfil";
    Layout = null;
}

@using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProfileId)
    @Html.HiddenFor(model => model.BeforeProfile)

    <div class="panel-body">
        <div class="col-md-12">
            <div class="row">
                <div class="row">
                    <div class="col-md-12">
                        <label>Perfil</label>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @required = "required" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn bg-capture btn-labeled btn-labeled-right">Actualizar<b><i class="icon-add"></i></b></button>
                        <br /><br />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

